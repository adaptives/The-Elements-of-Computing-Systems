/** 
 * Multiplexor.  If sel=0 then out = a else out = b.
 */

CHIP Mux {

    IN  a, b, sel;
    OUT out;

    PARTS:
    Not(in=sel,out=notsel);
    And(a=a,b=notsel,out=asel);
    And(a=b,b=sel,out=bsel);
    Or(a=asel, b=bsel, out=out);
}
